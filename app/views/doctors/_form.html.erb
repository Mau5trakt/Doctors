<%= form_with model: doctor, html: { class: "form__element" } do |f| %>

  <% if @doctor.errors.any? %>
  <div class="form__errors">
    <h2 class="form__errors--title">Errores</h2>
    <ul class="form__errors--list">
      <% @doctor.errors.messages.each do |attribute, messages| %>
        <% messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      <% end %>
    </ul>
  </div>
<% end %>


  <div class="field">
    <%= f.label :full_name, "Nombre completo", class: "field__label" %>
    <%= f.text_field :full_name, class: "field__input" %>
  </div>

  
  <div class="field">
    <%= f.label :medical_code, "Código médico", class: "field__label" %>
    <%= f.text_field :medical_code, class: "field__input" %>
  </div>

  
  <div class="field">
    <%= f.label :email, "Email", class: "field__label" %>
    <%= f.email_field :email, class: "field__input" %>
  </div>

  
  <div class="field">
    <%= f.label :phone_number, "Teléfono", class: "field__label" %>
    <%= f.text_field :phone_number, class: "field__input" %>
  </div>

  
  <div class="field">
    <%= f.label :identity_card, "Cédula", class: "field__label" %>
    <%= f.text_field :identity_card, class: "field__input" %>
  </div>

  
  <div class="field">
    <%= f.label :speciality_ids, "Especialidades (ingrese más de una mateniendo control y haciendo click en las especialidades a añadir)", class: "field__label" %>

    <%= f.collection_select :speciality_ids,
          Speciality.all,
          :id,
          :name,
          { prompt: "Selecciona una o varias especialidades" },
          { multiple: true, class: "field__input", size: 5 } %>
  </div>

  <!-- Botón -->
  <div class="field">
    <%= f.submit button_text, class: "button__full--success" %>
  </div>

<% end %>
